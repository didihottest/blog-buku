<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partial/header')  %>
</head>

<body>
  <!-- Responsive navbar-->
  <%- include('partial/navbar')  %>
  <!-- Page header with logo and tagline-->
  <header class="py-5 bg-light border-bottom mb-4">
    <div class="container">
      <div class="text-center my-5">
        <h1 class="fw-bolder">Create New Book!</h1>
      </div>
    </div>
  </header>
  <!-- Page content-->
  <div class="container">
    <div class="row">
      <!-- Blog entries-->
      <div class="col-lg-12">
        <!-- Nested row for non-featured blog posts-->
        <div class="row">
          <form action="/create" method="post">
            <div class="row mb-2">
              <div class="col">
                <label for="author_name">Nama Penulis</label>
                <input type="text" class="form-control" placeholder="Nama Penulis" name="author_name" aria-label="" required>
              </div>
              <div class="col">
                <label for="title">Judul Buku</label>
                <input type="text" class="form-control" placeholder="Judul Buku" name="title" aria-label="" required>
              </div>
            </div>
            <div class="row mb-2">
              <div class="col">
                <label for="title">Deskripsi</label>
                <textarea type="text" class="form-control" placeholder="Deskripsi Buku" name="description" aria-label="" required></textarea>
              </div>
              <div class="col">
                <label for="release_date">Tanggal Terbit</label>
                <input type="date" class="form-control" placeholder="" name="release_date" aria-label="" required>
              </div>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
          </form>

        </div>
      </div>
    </div>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
</body>

</html>