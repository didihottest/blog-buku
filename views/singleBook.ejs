<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partial/header')  %>
</head>

<body>
  <!-- Responsive navbar-->
  <%- include('partial/navbar')  %>
  <!-- Page content-->
  <div class="container mt-5">
    <div class="row">
      <div class="col-lg-12">
        <!-- Post content-->
        <article>
          <!-- Post header-->
          <header class="mb-4">
            <!-- Post title-->
            <h1 class="fw-bolder mb-1"><%= data.title %> </h1>
            <!-- Post meta content-->
            <div class="text-muted fst-italic mb-2">Dirilis Pada Tanggal <%= new Date(data.release_date).toLocaleDateString('id-ID')%> </div>
            <!-- Post categories-->
            <!-- <a class="badge bg-secondary text-decoration-none link-light" href="#!">Web Design</a>
            <a class="badge bg-secondary text-decoration-none link-light" href="#!">Freebies</a> -->
            <p class="text-muted">Ditulis Oleh : <%= data.author_name %> </p>
          </header>
          <!-- Preview image figure-->
          <figure class="mb-4"><img class="img-fluid rounded" src="https://dummyimage.com/900x400/ced4da/6c757d.jpg" alt="..." /></figure>
          <!-- Post content-->
          <section class="mb-5">
            <p class="fs-5 mb-4"><%= data.description %> </p>
          </section>
        </article>
        <!-- Comments section-->

      </div>
      <!-- Side widgets-->

    </div>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
</body>

</html>